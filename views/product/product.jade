extends ../layout

block content
    .container
        br
        br
        a(href="/products/edit" class="btn btn-primary") create new One
        if(params)
            p #{params}

        .row
            h1 - Your Products -
            if(!product)
                h2 No such product!
            if(product)
                each val in product
                    .col-md-4
                        .panel.panel-default
                            .panel-heading Profile - #{val.displayName}
                            .img
                                img(src="/img/659806-Box_cube_cargo_loading_package_archive_arrow_file_open_product-512.png" alt="img")
                            .panel-body
                                ul
                                    li your ID -
                                        span.id#test  #{val._id}
                                    li Email -
                                        span  #{val.email}
                                    if(val.image)
                                        li
                                            img(src="#{val.image}")

                        a(class="test btn btn-primary") #{val._id}

        if(pages > 0)
            ul(class="pagination text-center")
                if(current == 1)
                    li(class="disabled")
                        a First
                else
                    li
                        if (!params)
                            a(href="/products?pages=1") First
                        if (params)
                            a(href="/products?pages=1#{params}") First
                - var i = (Number(current) > 5 ? Number(current) - 4 : 1)
                    if (i !== 1)
                        li(class="disabled")
                            a ...
                - for (; i <= (Number(current) + 4) && i <= pages; i++)
                    if(i == current)
                        li(class="active")
                            a= i
                    else
                        li
                            if (!params)
                                a(href="/products?pages=#{i}")= i
                            if (params)
                                a(href="/products?pages=#{i}#{params}")= i
                    if(i == Number(current) + 4 && i < pages)
                        li(class="disabled")
                            a ...
                if(current == pages)
                    li(class="disabled")
                        a Last
                else
                    li
                        if (!params)
                            a(href="/products?pages=#{i}") Last
                        if (params)
                            a(href="/products?pages=#{i}#{params}") Last